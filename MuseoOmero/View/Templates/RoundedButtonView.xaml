<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:templates="clr-namespace:MuseoOmero.View.Templates"
			 x:Class="MuseoOmero.View.Templates.RoundedButtonView"
			 BindingContext="{Binding Source={RelativeSource Mode=Self}}"
			 x:DataType="templates:RoundedButtonView">

    <ContentView.Content>
            <Button Text="{Binding Text}"
				Margin="0,40,0,12"
				HeightRequest="52"
				FontSize="18"
				BackgroundColor="{Binding Color}"
				BorderColor="{Binding Color}"
				BorderWidth="0"
				CornerRadius="26"
                Clicked="RoundedButton_Clicked"
                Pressed="RoundedButton_Pressed"
                Released="RoundedButton_Released">
            </Button>
    </ContentView.Content>
</ContentView>
