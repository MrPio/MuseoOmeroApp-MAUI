<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:templates="clr-namespace:MuseoOmero.View.Templates"
			 x:Class="MuseoOmero.View.Templates.RoundedButtonView"
			 x:DataType="templates:RoundedButtonView">

	<Button x:Name="Button"
			Text="{Binding Source={RelativeSource AncestorType={x:Type templates:RoundedButtonView}}, Path= Text}"
			HeightRequest="{Binding Source={RelativeSource AncestorType={x:Type templates:RoundedButtonView}}, Path=  NewHeight}"
			FontSize="{Binding Source={RelativeSource AncestorType={x:Type templates:RoundedButtonView}}, Path=  NewFontSize}"
			BackgroundColor="{Binding Source={RelativeSource AncestorType={x:Type templates:RoundedButtonView}}, Path=  Color}"
			BorderColor="{Binding Source={RelativeSource AncestorType={x:Type templates:RoundedButtonView}}, Path=  Color}"
			BorderWidth="0"
			CornerRadius="25"
			Clicked="RoundedButton_Clicked"
			Pressed="RoundedButton_Pressed"
			Released="RoundedButton_Released">
	</Button>
</ContentView>
