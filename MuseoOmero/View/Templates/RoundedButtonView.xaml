<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:templates="clr-namespace:MuseoOmero.View.Templates"
			 xmlns:converters="clr-namespace:MuseoOmero.Converters"
			 x:Class="MuseoOmero.View.Templates.RoundedButtonView"
			 x:DataType="templates:RoundedButtonView">

	<Button x:Name="Button"
			BindingContext="{Binding Source={RelativeSource AncestorType={x:Type templates:RoundedButtonView}}}"
			Text="{Binding Text}"
			HeightRequest="{Binding NewHeight}"
			FontSize="{Binding NewFontSize}"
			BackgroundColor="{Binding Color}"
			BorderColor="{Binding Color}"
			BorderWidth="0"
			TextColor="{Binding ReleasedTextColor}"
			CornerRadius="25"
			Clicked="RoundedButton_Clicked"
			Pressed="RoundedButton_Pressed"
			Released="RoundedButton_Released">
	</Button>
</ContentView>
